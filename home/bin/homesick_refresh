#!/usr/bin/env bash
export RBENV_VERSION=`cat ~/.ruby-version`
(
  cd
  for castle in `homesick list | perl -lna -e 'print $F[0]'`; do
    homesick pull $castle
    homesick exec $castle 'git submodule foreach git pull origin master && git submodule update'
    homesick unlink $castle
    homesick symlink $castle
  done
)
